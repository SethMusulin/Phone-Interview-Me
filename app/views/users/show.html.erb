<div class="fade">
  <nav>
  <span class="left">
  <%= link_to(image_tag("PhoneInterviewMe.png", class: "logo"), root_path) %>
  </span>
  <span class="right"><h6>Please call <span class="orange">(646) 679-2429</span> to start answering interview questions!
  </h6>
  </span>
    <span class="right" style="padding-right: 1em;">  <%= link_to "Logout", logout_path %>  </span>
  </nav>

  <p class="center">Your current phone number is: <%= number_to_phone(current_user.phone_number, area_code: true) %>. Click here to update your phone number: <%= link_to "Update Phone Number", edit_phone_path, class: "main_button" %></p>
  <% if !@recordings.empty? %>
    <span class="center"><h1>Recordings</h1></span>

    <% @recordings.each do |recording| %>
      <ul>
        <div class="one_third">
          <% if 24 - recording.created_at.strftime("%H").to_i == 0 %>
            <li><%= recording.created_at.strftime("%B %e, %Y at %l:%M AM") %> -
              <a href="<%= recording.recording %>" target="_blank"><%= recording.question.question %> </a></li>
          <% elsif 24 - recording.created_at.strftime("%H").to_i > 12 %>
            <li><%= recording.created_at.strftime("%B %e, %Y at %l:%M AM") %> -
              <a href="<%= recording.recording %>" target="_blank"><%= recording.question.question %> </a></li>
          <% else %>
            <li><%= recording.created_at.strftime("%B %e, %Y at %l:%M PM") %> -
              <a href="<%= recording.recording %>" target="_blank"><%= recording.question.question %> </a></li>
          <% end %>
        </div>
      </ul>
    <% end %>
  <% end %>

</div>
