<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<p>Welcome, <%= current_user.first_name %>!</p>
<%= form_for @user do |f| %>
  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>
  <%= f.submit "Add Phone Number" %>
<% end %>